---
import type { CollectionEntry } from 'astro:content';
import PostListItem from './PostListItem.astro';

type Props = {
  posts: CollectionEntry<'blog'>[];
};

const { posts } = Astro.props;
---

<div class="flex flex-col gap-4">
  {posts.map((post) => (
    <PostListItem post={post} />
  ))}
</div>
