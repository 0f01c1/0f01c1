---
import { Icon } from "astro-iconify";

const today = new Date();
---

<footer class="mt-20 md:mt-36 px-4">
  <!-- Single-row layout on large screens, stacked on smaller -->
  <div class="flex flex-col md:flex-row items-center md:items-start justify-between gap-4 border-b pb-8 mb-5">
    <!-- Left: social icons -->
    <div class="flex items-center gap-3">
      <a href="https://www.linkedin.com/in/0f01c1" target="_blank" aria-label="LinkedIn">
        <Icon name="radix-icons:linkedin-logo" class="w-5 h-5 text-gray-600 hover:text-gray-500 dark:text-neutral-200"/>
      </a>
      <a href="https://www.github.com/0f01c1" target="_blank" aria-label="GitHub">
        <Icon name="radix-icons:github-logo" class="w-5 h-5 text-gray-600 hover:text-gray-500 dark:text-neutral-200"/>
      </a>
      <a href="https://x.com/0f01c1" target="_blank" aria-label="X">
        <Icon name="radix-icons:twitter-logo" class="w-5 h-5 text-gray-600 hover:text-gray-500 dark:text-neutral-200"/>
      </a>
    </div>

    <!-- Right: page links -->
    <nav aria-label="Footer navigation">
      <ul class="flex items-center gap-3 text-sm">
        <li><a href="/">Home</a></li>
        <li>|</li>
        <li><a href="/about">About</a></li>
        <li>|</li>
        <li><a href="/blog">Blog</a></li>
        <li>|</li>
        <li><a href="/tags">Tags</a></li>
      </ul>
    </nav>
  </div>

  <p class="text-sm font-medium mb-10 text-center md:text-left">
    &copy; {today.getFullYear()} 0f01c1. All rights reserved.
  </p>
</footer>
