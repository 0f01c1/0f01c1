---
import BaseLayout from "../layouts/BaseLayout.astro";
import { formatTitle } from "../consts";
---

<BaseLayout title={formatTitle("404 - Page Not Found")} description="Page not found">
  <div class="flex flex-col items-center justify-center text-center gap-8 py-16">
    <div class="flex flex-col gap-4">
      <h1 class="text-2xl font-bold flex items-baseline gap-4 justify-center">
        404 - Page Not Found
      </h1>
      <p class="text-gray-600 dark:text-neutral-400">
        The page you're looking for doesn't exist or has been moved.
      </p>
    </div>
  </div>
</BaseLayout>
